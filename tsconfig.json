{
  "include": ["src"],
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "lib": ["es6", "es2021", "dom"],
    "declaration": true,
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "types": ["node"],
    "allowJs": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}
